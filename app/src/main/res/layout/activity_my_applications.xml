<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_yellow"
    android:padding="20dp"
    android:theme="@style/Base.Theme.TeamX"
    tools:context=".MyTeamsActivity">

    <TextView
        android:id="@+id/tTitleTeams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/team_applications"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lTeams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tTitleTeams"
        android:layout_centerInParent="true"
        android:layout_marginBottom="40dp"
        android:cacheColorHint="#FFFFFFFF"
        android:divider="#FFA09C9C"
        android:dividerHeight="2dp"
        android:scrollbarThumbVertical="@drawable/listview_scrollbar_thumb"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tTitleApps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lTeams"
        android:text="@string/my_applications"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lApps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tTitleApps"
        android:layout_marginBottom="30dp"
        android:cacheColorHint="#FFFFFFFF"
        android:divider="#FFA09C9C"
        android:dividerHeight="2dp"
        android:scrollbarThumbVertical="@drawable/listview_scrollbar_thumb"
        android:textAlignment="center" />

    <include layout="@layout/footer_layout"
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>